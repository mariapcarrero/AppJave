<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="JaverianaCali.Views.BooksView"
             xmlns:local="clr-namespace:JaverianaCali">
<ContentPage.Content>
 <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <BoxView Color="#2C5697" Grid.Row="0"/>
        <BoxView Color="White" Grid.Row="1"/>
        <BoxView Color="#2C5697" Grid.Row="2"/>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="70"></ColumnDefinition>
            </Grid.ColumnDefinitions>

                <ImageButton Source="IconLogOut.png" Grid.Column="0" HorizontalOptions="Center"
                             VerticalOptions="CenterAndExpand" 
                             BackgroundColor="#2C5697"
                             Clicked="ClickedLogOut"/>
                <Label Text="MIS LIBROS" Grid.Column="1" Style="{StaticResource Cocogoose}" TextColor="Black"
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center"
                       FontSize="Large"/>
                <ImageButton Source="IconUser.png" Grid.Column="2" HorizontalOptions="Center"
                             VerticalOptions="CenterAndExpand" 
                             BackgroundColor="#2C5697"/>

            </Grid>
        <ListView Grid.Row="1" x:Name="ListViewBooks" ItemsSource="{Binding Books}" HasUnevenRows = "true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout VerticalOptions = "FillAndExpand" HorizontalOptions = "FillAndExpand" Orientation="Vertical" Spacing="5" Padding="5" >
                              <Label Text="{Binding Name}" Style="{StaticResource FontHeavy}" TextColor="Black" />
                              <Label Text="{Binding GetDetailedInformation}" Margin="0,0,0,0" Style="{StaticResource FontBook}" TextColor="Black"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <ImageButton Source="IconAsignaturasNavBar.png" 
                         Grid.RowSpan="3"
                         Grid.Column="0" 
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand" 
                         BackgroundColor="#2C5697"/>
            <ImageButton Source="IconPortatilesNavBar.png" 
                         Grid.RowSpan="3"
                         Grid.Column="1" 
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand" 
                         BackgroundColor="#2C5697"
                         Clicked="ClickedPortatiles"/>
            <ImageButton Source="IconBook.png" 
                         Grid.RowSpan="3"
                         Grid.Column="2" 
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand" 
                         BackgroundColor="#2C5697"
                         Clicked="ClickedLibros"/>
            <ImageButton Source="IconAjustesNavBar.png" 
                         Grid.RowSpan="3"
                         Grid.Column="3" 
                         HorizontalOptions="Center"
                         VerticalOptions="CenterAndExpand" 
                         BackgroundColor="#2C5697"
                         Clicked="ClickedAjustes" />
            

            </Grid>
        </Grid>     
    </ContentPage.Content>
</ContentPage>
